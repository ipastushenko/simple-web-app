source 'https://rubygems.org'

ruby '2.0.0'

# Utilites
gem 'rails', '4.0.0'

# Auth
gem 'devise'

# SCSS
gem 'sass-rails', '~> 4.0.0'
gem 'bootstrap-sass'

# JS
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'uglifier', '>= 1.3.0'
### Flash messages
gem 'toastr-rails'

# JSON
gem 'jbuilder', '~> 1.2'
gem 'angular_rails_csrf'

group :development do
  # Database
  gem 'mysql2'

  # Rails Panel
  gem 'meta_request'

  # Email letter opener
  gem 'letter_opener'

  # Debug
  gem 'pry'
end

group :production do
  gem 'pg'
  gem 'rails_12factor'
end

group :doc do
  gem 'sdoc', require: false
end
